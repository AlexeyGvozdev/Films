<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="120dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="16dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="155dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/iv_poster"
        android:layout_marginStart="20dp"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/iv_poster"
        android:text="TextViewsfsfsfsdfs"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_overview"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="34dp"
        android:layout_alignBottom="@id/iv_calendar"
        android:text="1\n2\n3\n4\n5\n6\n7"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_calendar"
        android:layout_toEndOf="@+id/iv_calendar"
        android:layout_marginBottom="2dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_poster"
        android:layout_alignStart="@+id/tv_overview"
        android:background="@drawable/ic_alendar"/>

    <CheckBox
        android:id="@+id/iv_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_calendar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:button="@drawable/checkbox_selector"
        />

</RelativeLayout>